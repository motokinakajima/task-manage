<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Hayabusa Charmer' }) %>

<body>
    <div class="container">
        <%- include('partials/sidebar', { userID: userID }) %>

        <div class="content">
            <div class="section">
                <h2 class="project-heading">プロジェクト一覧</h2>
                <% if(projects && projects.length > 0) { %>
                    <table>
                        <thead>
                        <tr>
                            <th>プロジェクト名</th>
                            <th>概要</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% projects.forEach(row => { %>
                            <tr>
                                <td><a href="/project?pid=<%= row.projectID %>"><%= row.name %></a></td>
                                <td><%= row.description %></td>
                                <td><form action="/project/delete-project" method="post"><input type="hidden" name="projectID" value="<%= row.projectID%>"><button type="submit">削除</button></form></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                <% }else { %>
                    <p>プロジェクトはまだありません</p>
                <% } %>
                <form action="/dashboard/create-project" method="get"><button type="submit">プロジェクトを作成</button></form>
            </div>

            <div class="section">
                <h2 class="task-heading">自分のタスク一覧 (responsible)</h2>
                <% if(responsibleTask && responsibleTask.length > 0) { %>
                <table id="taskTable">
                    <thead>
                        <tr>
                            <th>タスク名</th>
                            <th>概要</th>
                            <th>期限</th>
                            <th>進行度</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% responsibleTask.forEach(row => { %>
                            <tr>
                                <td><a href="/task?tid=<%= row.taskID %>"><%= row.name %></a></td>
                                <td><%= row.description %></td>
                                <td><%= row.due %></td>
                                <td data-completion="<%= row.completion %>">
                                    <% if(row.completion === 1) { %>
                                        完了
                                    <% } else if(row.completion === 0) { %>
                                        進行中
                                    <% } else { %>
                                        開始前
                                    <% } %>
                                </td>
                                <td>
                                    <form action="/task/delete-task" method="post">
                                        <input type="hidden" name="taskID" value="<%= row.taskID %>">
                                        <button type="submit">削除</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <div id="chart_div"></div>
                <% } else { %>
                    <p>表示するプロジェクトがありません</p>
