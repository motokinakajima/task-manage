<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<h1>create task!</h1>
<p><a href="/">ホーム</a></p>
<div class="container">
    <form method="post" action="/project/create-task">
        <label for="task_name"><b>Task Name</b></label>
        <input type="text" placeholder="Enter Task Name" name="task_name" required>
        <br>

        <label for="task_description"><b>Task Description</b></label>
        <input type="text" placeholder="Enter Task Description" name="task_description" required>
        <br>

        <label for="start_date"><b>Start Date</b></label>
        <input type="date" placeholder="Enter Start Date" name="start_date" required>
        <br>

        <label for="due_date"><b>Due Date</b></label>
        <input type="date" placeholder="Enter Due Date" name="due_date" required>
        <br>

        <label for="priority"><b>Priority</b></label>
        <input type="text" placeholder="Enter Priority" name="priority" required>
        <br>

        <label for="risk"><b>Risk</b></label>
        <input type="text" placeholder="Enter Risk" name="risk" required>
        <br>

        <label for="responsible"><b>Responsible</b></label>
        <% if(users) { %>
        <select name="responsible">
            <% users.forEach( row => { %>
            <option value="<%= row.name%>"><%= row.name %></option>
            <% }) %>
        </select>
        <% } else { %>
            <input type="text" placeholder="Enter Responsible" name="responsible" required>
        <% } %>
        <br>

        <label for="accountable"><b>Accountable</b></label>
        <%if(users) { %>
        <select name="accountable">
            <% users.forEach( row => { %>
            <option value="<%= row.name%>"><%= row.name %></option>
            <% }) %>
        </select>
        <% } else { %>
            <input type="text" placeholder="Enter Accountable" name="accountable" required>
        <% } %>
        <br>

        <label for="consulted"><b>Consulted</b></label>
        <% if(users) { %>
        <select name="consulted">
            <% users.forEach( row => { %>
            <option value="<%= row.name%>"><%= row.name %></option>
            <% }) %>
        </select>
        <% } else { %>
            <input type="text" placeholder="Enter Consulted" name="consulted" required>
        <% } %>
        <br>

        <label for="informed"><b>Informed</b></label>
        <% if(users) { %>
        <select name="informed">
            <% users.forEach( row => { %>
            <option value="<%= row.name%>"><%= row.name %></option>
            <% }) %>
        </select>
        <% } else { %>
            <input type="text" placeholder="Enter Informed" name="informed" required>
        <% } %>
        <br>

        <button type="submit">submit</button>
    </form>
</div>
</body>
<script>console.log(users)</script>
</html>